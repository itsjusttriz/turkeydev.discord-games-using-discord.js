{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true
    },
    "include": [
        "src/index.js",
        "src/commands/*.js",
        "src/utils/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.js"
    ]
}